#include <bits/stdc++.h>
using namespace std ;
#define ll long long

int main(){
//    freopen("input.txt" , "r" , stdin) ;
    ios_base::sync_with_stdio(false) ;
    ll n ;
//    while(cin >> n )
    {
        cin >> n ;
        ll k = 0 , m = n / 3 ;
        for(ll i = 3 ; ; i*=2){
            if(k + i >= n){
//                cerr << "H:  " << i << ' ' << k + i - n << endl ;
                cout << k + i - n + 1LL << endl ;
//                cout << i << endl ;
                break ;
            }
            k += i ;
//            cerr << k << endl ;
        }
    }
}
